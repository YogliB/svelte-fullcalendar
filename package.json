{
	"description": "A Svelte component wrapper around FullCalendar",
	"devDependencies": {
		"@babel/core": "7.14.0",
		"@babel/eslint-parser": "7.14.2",
		"@testing-library/cypress": "7.0.6",
		"cypress": "6.9.1",
		"eslint": "7.26.0",
		"eslint-config-prettier": "8.3.0",
		"eslint-plugin-cypress": "2.11.3",
		"eslint-plugin-svelte3": "3.2.0",
		"husky": "6.0.0",
		"lerna": "4.0.0",
		"lint-staged": "11.0.0",
		"prettier": "2.3.0",
		"prettier-plugin-svelte": "2.2.0",
		"start-server-and-test": "1.12.1",
		"svelte": "3.38.1"
	},
	"husky": {
		"hooks": {
			"pre-commit": "lint-staged"
		}
	},
	"lint-staged": {
		"*.{js, svelte}": [
			"eslint --fix",
			"git add"
		],
		"*.{svelte, html, css, scss, stylus, js, ts, json, yml, md}": [
			"prettier --write",
			"git add"
		]
	},
	"name": "svelte-fullcalendar",
	"prettier": {
		"arrowParens": "always",
		"bracketSpacing": true,
		"endOfLine": "lf",
		"htmlWhitespaceSensitivity": "css",
		"printWidth": 80,
		"quoteProps": "as-needed",
		"semi": true,
		"singleQuote": true,
		"tabWidth": 4,
		"trailingComma": "es5",
		"useTabs": true
	},
	"private": true,
	"scripts": {
		"bootstrap": "lerna bootstrap",
		"cy:open": "cypress open",
		"cy:run": "cypress run",
		"dev:sapper": "lerna run dev --scope=@examples/sapper --stream",
		"dev:svelte": "lerna run dev --scope=@examples/svelte --stream",
		"lint": "eslint --color .",
		"publish": "lerna publish",
		"test:sapper": "start-server-and-test dev:sapper http://localhost:3000 cy:run",
		"test:svelte": "start-server-and-test dev:svelte http://localhost:3000 cy:run"
	},
	"workspaces": [
		"packages/*",
		"examples/*"
	]
}
