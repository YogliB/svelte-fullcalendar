{
	"description": "A Svelte component wrapper around FullCalendar",
	"devDependencies": {
		"@babel/core": "7.14.6",
		"@babel/eslint-parser": "7.14.7",
		"@testing-library/cypress": "7.0.6",
		"cypress": "7.6.0",
		"eslint": "7.29.0",
		"eslint-config-prettier": "8.3.0",
		"eslint-plugin-cypress": "2.11.3",
		"eslint-plugin-svelte3": "3.2.0",
		"husky": "6.0.0",
		"lerna": "4.0.0",
		"lint-staged": "11.0.0",
		"prettier": "2.3.1",
		"prettier-plugin-svelte": "2.3.0",
		"start-server-and-test": "1.12.5",
		"svelte": "3.38.3"
	},
	"husky": {
		"hooks": {
			"pre-commit": "lint-staged"
		}
	},
	"lint-staged": {
		"*.{js, svelte}": [
			"eslint --fix",
			"git add"
		],
		"*.{svelte, html, css, scss, stylus, js, ts, json, yml, md}": [
			"prettier --write",
			"git add"
		]
	},
	"name": "svelte-fullcalendar",
	"prettier": {
		"arrowParens": "always",
		"bracketSpacing": true,
		"endOfLine": "lf",
		"htmlWhitespaceSensitivity": "css",
		"printWidth": 80,
		"quoteProps": "as-needed",
		"semi": true,
		"singleQuote": true,
		"tabWidth": 4,
		"trailingComma": "es5",
		"useTabs": true
	},
	"private": true,
	"scripts": {
		"cy:open": "cypress open",
		"cy:run": "cypress run",
		"dev:sapper": "pnpm run dev --filter=@examples/sapper",
		"dev:svelte": "pnpm run dev --filter=@examples/svelte",
		"lint": "eslint --color .",
		"test:sapper": "start-server-and-test dev:sapper http://localhost:3000 cy:run",
		"test:svelte": "start-server-and-test dev:svelte http://localhost:3000 cy:run"
	},
	"workspaces": [
		"packages/*",
		"examples/*"
	]
}
